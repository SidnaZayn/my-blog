---
import DefaultLayout from '../../layouts/DefaultLayout.astro'
import Feature from '../../components/Feature.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts'
import { getAllPagesWithSlugs } from '../../lib/api.js'

const pages = await getAllPagesWithSlugs()
---

<DefaultLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <section class="my-12">
    <div class="space-content container">
      <h1>Blog</h1>
      <p class="text-2xl">
        Discover a world of tech wonders and awe-inspiring destinations as we delve into the captivating realm of
        technology and travel
      </p>
    </div>
  </section>
  <section class="my-12">
    <div class="container">
      <ul class="my-3">
        {
          pages.map((node) => (
            <li>
              <Feature
                title={node.title}
                href={'/blog/' + node.slug}
                src={node.featuredImage}
                set:html={node.tldr}
              >                
              </Feature>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</DefaultLayout>

<style lang="scss">
  ul {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 4rem;

    @media (min-width: 550px) {
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 2rem;
    }

    @media (min-width: 950px) {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
